<%- 
  cpus = bih_cpus.to_i
  mem = bih_mem.to_i
  time = bih_time
  if time.include?("h")
    formatted_time = "0-" + time.gsub("h", "")
  elsif time.include?("d")
    formatted_time = time.gsub("d", "") + "-0"
  end
-%>
---
batch_connect:
  template: "basic"
  conn_params:
    - csrf_token
script:
  native:
    - "--cpus-per-task"
    - "<%= cpus %>"
    - "--mem"
    - "<%= mem * 1024 %>"
    - "--partition"
    - "<%= bih_partition %>"
    - "--time"
    - "<%= formatted_time %>"
