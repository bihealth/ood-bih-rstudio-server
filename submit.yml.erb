<%- 
  cpus = bih_cpus.to_i
  mem = bih_mem.to_i
  time = bih_time
  if time.end_with?("h")
    formatted_time = "0-" + time.delete_suffix("h")
  elsif time.end_with?("d")
    formatted_time = time.delete_suffix("d") + "-0"
  end
-%>
---
batch_connect:
  template: "basic"
  conn_params:
    - csrf_token
script:
  native:
    - "--cpus-per-task"
    - "<%= cpus %>"
    - "--mem"
    - "<%= mem * 1024 %>"
    - "--partition"
    - "<%= bih_partition %>"
    - "--time"
    - "<%= formatted_time %>"
